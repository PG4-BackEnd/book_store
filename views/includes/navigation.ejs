<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/shop' ? 'active' : '' %>" href="/shop"
          ><i class="fas fa-store"></i>Shop</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/products' ? 'active' : '' %>" href="/products"
          ><i class="fas fa-box"></i>Products</a
        >
      </li>
      <% if (isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart"
          ><i class="fas fa-shopping-cart"></i>Cart</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders"
          ><i class="fas fa-file-invoice-dollar"></i>Orders</a
        >
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/admin/add-product' ? 'active' : '' %>"
          href="/admin/add-product"
          >Add Product
        </a>
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/admin/products' ? 'active' : '' %>"
          href="/admin/products"
          >Admin Products
        </a>
      </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
      <li class="main-header__item">
        <a
          class="<%= path === '/users/login' ? 'active' : '' %>"
          href="/users/login"
          ><i class="fas fa-sign-in-alt"></i>Login</a
        >
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/users/signup' ? 'active' : '' %>"
          href="/users/signup"
          ><i class="fas fa-user-plus"></i>Signup</a
        >
      </li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/users/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit">
            <i class="fas fa-sign-out-alt"></i> Logout
          </button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>

<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">
    <li class="mobile-nav__item">
      <a class="<%= path === '/shop' ? 'active' : '' %>" href="/shop"
        ><i class="fas fa-store"></i>Shop</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/products' ? 'active' : '' %>" href="/products"
        ><i class="fas fa-box"></i>Products</a
      >
    </li>
    <% if (isAuthenticated) { %>
    <li class="mobile-nav__item">
      <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart"
        ><i class="fas fa-shopping-cart"></i>Cart</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders"
        ><i class="fas fa-file-invoice-dollar"></i>Orders</a
      >
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/admin/add-product' ? 'active' : '' %>"
        href="/admin/add-product"
        >Add Product
      </a>
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/admin/products' ? 'active' : '' %>"
        href="/admin/products"
        >Admin Products
      </a>
    </li>
    <% } %> <% if (!isAuthenticated) { %>
    <li class="mobile-nav__item">
      <a class="<%= path === '/users/login' ? 'active' : '' %>" href="/login"
        ><i class="fas fa-sign-in-alt"></i>Login</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/users/signup' ? 'active' : '' %>" href="/signup"
        ><i class="fas fa-user-plus"></i>Signup</a
      >
    </li>
    <% } else { %>
    <li class="mobile-nav__item">
      <form action="/users/logout" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        <button type="submit">
          <i class="fas fa-sign-out-alt"></i> Logout
        </button>
      </form>
    </li>
    <% } %>
  </ul>
</nav>
